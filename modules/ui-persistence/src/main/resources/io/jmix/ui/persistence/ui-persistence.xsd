<xs:schema targetNamespace="http://schemas.haulmont.com/ui/ui-persistence.xsd"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="http://schemas.haulmont.com/ui/ui-persistence.xsd"
           elementFormDefault="qualified">

    <!-- Screen Settings Facet -->
    <xs:complexType name="screenSettingsType">
        <xs:all>
            <xs:element name="exclude" type="screenSettingsComponentType" minOccurs="0"/>
            <xs:element name="include" type="screenSettingsComponentType" minOccurs="0"/>
        </xs:all>

        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="includeAll" type="xs:boolean"/>
    </xs:complexType>

    <xs:complexType name="screenSettingsComponentType">
        <xs:attribute name="componentId" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:element name="screenSettings" type="screenSettingsType"/>
</xs:schema>