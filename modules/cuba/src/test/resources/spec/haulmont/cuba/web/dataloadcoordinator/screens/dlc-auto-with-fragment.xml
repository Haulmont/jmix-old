<window xmlns="http://jmix.io/schema/ui/window"
        focusComponent="form">
    <data>
        <instance id="ownerDc"
                  class="com.haulmont.cuba.core.model.Owner"
                  fetchPlan="owner-with-category-view">
            <loader/>
            <instance id="addressDc" property="address"/>
        </instance>
        <collection id="petsDc" class="com.haulmont.cuba.core.model.Pet" fetchPlan="_local">
            <loader id="petsDl">
                <query>select e from test_PetclinicPet e where e.owner = :container_ownerDc</query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="petsTable" spacing="true">
        <form id="form" dataContainer="ownerDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
            </column>
        </form>
        <groupBox caption="Address">
            <fragment id="addressFragment" screen="pc_AddressFragment"/>
        </groupBox>
        <table id="petsTable" dataContainer="petsDc" width="100%">
            <columns>
                <column id="name"/>
            </columns>
        </table>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
