<module>
    <inherits name="com.vaadin.v7.Vaadin7WidgetSet"/>

    <replace-with class="io.jmix.ui.widgets.client.tooltip.JmixTooltip">
        <when-type-is class="com.vaadin.client.VTooltip"/>
    </replace-with>

    <replace-with class="io.jmix.ui.widgets.client.datefield.JmixDateCalendarPanel">
        <when-type-is class="com.vaadin.client.ui.VDateCalendarPanel"/>
    </replace-with>

    <replace-with class="io.jmix.ui.widgets.client.appui.AppUIConnector">
        <when-type-is class="com.vaadin.client.ui.ui.UIConnector"/>
    </replace-with>

    <replace-with class="io.jmix.ui.widgets.client.notification.JmixNotification">
        <when-type-is class="com.vaadin.client.ui.VNotification"/>
    </replace-with>

    <!-- Text selection enable functions deferred binding -->

    <define-property name="ie11orHigher" values="no,yes"/>
    <property-provider name="ie11orHigher"><![CDATA[
      {
        var ua = $wnd.navigator.userAgent;
        if (ua.indexOf('MSIE') == -1 && ua.indexOf('Trident') != -1) { return 'yes'; }
        return 'no';
      }
    ]]></property-provider>

    <replace-with class="io.jmix.ui.widgets.client.sys.ToolsImplIE">
        <when-type-is class="io.jmix.ui.widgets.client.sys.ToolsImpl"/>
        <any>
            <when-property-is name="ie11orHigher" value="yes"/>
        </any>
    </replace-with>

    <replace-with class="io.jmix.ui.widgets.client.sys.ToolsImplMozilla">
        <when-type-is class="io.jmix.ui.widgets.client.sys.ToolsImpl"/>
        <all>
            <when-property-is name="user.agent" value="gecko1_8"/>
            <when-property-is name="ie11orHigher" value="no"/>
        </all>
    </replace-with>

    <replace-with class="io.jmix.ui.widgets.client.sys.ToolsImplWebkit">
        <when-type-is class="io.jmix.ui.widgets.client.sys.ToolsImpl"/>
        <any>
            <when-property-is name="user.agent" value="safari"/>
        </any>
    </replace-with>

    <set-configuration-property name="devModeRedirectEnabled" value="true"/>
</module>
