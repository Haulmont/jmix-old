<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="io.jmix.samples.ui.screen.user.UserBrowse"
        messagesPack="io.jmix.samples.ui.screen.user">
    <dsContext>
        <collectionDatasource id="userDs"
                              view="_local"
                              class="io.jmix.security.entity.User"
                              allowCommit="false">
            <query>
                <![CDATA[select e from sec_User e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <label value="Users"/>
        <lookupField caption="Select Role"/>
        <filter id="genericFilter"
                applyTo="usersTable"
                datasource="userDs"
                margin="false,false,true,false">
            <properties include=".*"/>
        </filter>
        <table id="usersTable"
               height="500px"
               width="100%">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="login"/>
                <column id="name"/>
                <column id="firstName"/>
                <column id="lastName"/>
                <column id="middleName"/>
                <column id="position"/>
                <column id="email"/>
                <column id="language"/>
                <column id="timeZone"/>
                <column id="timeZoneAuto"/>
                <column id="active"/>
                <column id="changePasswordAtNextLogon"/>
                <column id="ipMask"/>
            </columns>
            <rows datasource="userDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="usersTable.create"/>
                <button id="editBtn" action="usersTable.edit"/>
                <button id="removeBtn" action="usersTable.remove"/>
            </buttonsPanel>
        </table>
        <vbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </vbox>
    </layout>
</window>
