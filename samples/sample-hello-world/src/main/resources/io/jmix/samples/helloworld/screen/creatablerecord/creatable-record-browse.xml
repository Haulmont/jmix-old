<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://creatableRecordBrowse.caption"
        focusComponent="creatableRecordsTable">
    <data readOnly="true">
        <collection id="creatableRecordsDc"
                    class="io.jmix.samples.helloworld.entity.CreatableRecord">
            <fetchPlan extends="_local"/>

            <loader id="creatableRecordsDl">
                <query>
                    <![CDATA[select e from sample_CreatableRecord e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <table id="creatableRecordsTable"
               width="100%"
               dataContainer="creatableRecordsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="title"/>
                <column id="createdDate"/>
                <column id="createdBy"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="creatableRecordsTable.create"/>
                <button id="editBtn" action="creatableRecordsTable.edit"/>
                <button id="removeBtn" action="creatableRecordsTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
